<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- cdn.siswa list view -->
        <record id="guruquran_cek_santri_view_tree" model="ir.ui.view">
            <field name="name">guruquran.siswa.view.list</field>
            <field name="model">cdn.siswa</field>
            <field name="arch" type="xml">
                <list create="false" edit="false" delete="false">
                    <header>
                        <!-- Tombol untuk mencetak sertifikat -->
                        <!-- <button name="(action_report_filter_wizard)d" string="Filter Data" type="action" class="btn-primary"/> -->
                        <button string="Print Sertifikat" name="action_print_sertifikat" type="object" class="oe_highlight"/>
                    </header>
                    <field name="nis" readonly='1'/>
                    <field name="name" readonly='1'/>
                    <field name="ruang_kelas_id" readonly='1'/>
                    <field name="halaqoh_id" string="Halaqah" readonly='1'/>
                    <field name="penanggung_jawab_id" readonly='1'/>
                    <field name="last_tahfidz" readonly='1'/>
                </list>
            </field>
        </record>

        <!-- cdn.siswa form view -->
        <record id="guruquran_cek_santri_view_form" model="ir.ui.view">
            <field name="name">guruguran.cdn.siswa.view.form</field>
            <field name="model">cdn.siswa</field>
            <field name="arch" type="xml">
                <form string="" create="false" delete="false">
                    <sheet>
                        <h1>
                            <field name="name" nolable="1" readonly='1'/>
                        </h1>
                        <group string="Santri">
                            <group>
                                <field name="street" readonly='1'/>
                                <field name="street2" readonly='1'/>
                                <field name="rt_rw" readonly='1'/>
                                <field name="city" readonly='1'/>
                                <field name="phone" readonly='1'/>
                            </group>
                            <group>
                                <field name="mobile" readonly='1'/>
                                <field name="ayah_nama" readonly='1'/>
                                <field name="ayah_telp" readonly='1'/>
                                <field name="ibu_nama" readonly='1'/>
                                <field name="ibu_telp" readonly='1'/>
                            </group>
                        </group>
                        <group string="Data Akademik">
                            <group>
                                <field name="nis" readonly='1'/>
                                <field name="ruang_kelas_id" readonly='1'/>
                                <field name="halaqoh_id" string="Halaqah" readonly='1'/>
                            </group>
                            <group>
                                <field name="last_tahfidz" readonly='1'/>
                                <field name="virtual_account" readonly='1'/>
                                <field name="va_saku" readonly='1'/>
                            </group>
                        </group>
                        <notebook>
                            <page name="tahfiz" string="Data Tahfidz">
                                <field name="tahfidz_quran_ids">
                                    <list create="0" edit="0" delete="0">
                                        <field name="tanggal" />
                                        <field name="sesi_tahfidz_id"/>
                                        <field name="surah_id"/>
                                        <field name="ayat_awal"/>
                                        <field name="ayat_akhir"/>
                                        <field name="nilai_id"/>
                                        <field name="nilai" />
                                        <field name="predikat" />
                                        <field name="ustadz_id"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            <page name="catatan_santri" string="Penilaian Lanjutan Santri">
                                <group name="data_catatan" string="Catatan Santri">
                                    <field name="catatan_ortu" widget='html'/>
                                    <field name="catatan" widget='html'/>
                                </group>
                                <group name="penilaian" string="Penilaian Santri">
                                    <field name="adab_ke_guru"/>
                                    <field name="adab_ke_teman"/>
                                    <field name="kedisiplinan"/>
                                </group>
                                
                                <group name="peringkat_Santri" string="Peringkat Santri">
                                    <field name="peringkat"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- cdn.siswa action window -->
        <record id="guruquran_cek_santri_action" model="ir.actions.act_window">
            <field name="name">Santri</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.siswa</field>
            <field name="view_mode">list,form</field>
            <!-- <field name="view_id" ref="cek_santri_view_tree" /> -->
            <field name="domain">
            [
                '|', ('halaqoh_id.penanggung_jawab_id.user_id','=',uid), ('halaqoh_id.pengganti_ids.user_id','=',uid)
            ]
            </field>
        </record>
        <record id="action_tree_view_cek_santri_guruquran" model="ir.actions.act_window.view">
            <field name="sequence" eval="2" />
            <field name="view_mode">list</field>
            <field name="view_id" ref="guruquran_cek_santri_view_tree" />
            <field name="act_window_id" ref="guruquran_cek_santri_action" />
        </record>
        <record id="action_form_view_cek_santri_guruquran" model="ir.actions.act_window.view">
            <field name="sequence" eval="3" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="guruquran_cek_santri_view_form" />
            <field name="act_window_id" ref="guruquran_cek_santri_action" />
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <!-- <menuitem id="guruquran_cek_santri_menu_act" name="Cek Santri" parent="guruquran_data_santri_menu_categ" action="guruquran_cek_santri_action" sequence="10"/> -->
    </data>
</odoo>