<odoo>
    <!--Wizard view for wallet recharge-->
    <record id="recharge_wallet_mass_view_form" model="ir.ui.view">
        <field name="name">recharge.wallet.mass.view.form</field>
        <field name="model">recharge.wallet.mass</field>
        <field name="arch" type="xml">
            <form string="wizard_view">
                <group>
                    <group>
                        <field name="recharge_amount" widget="integer"/>
                        <field name="journal_id"/>
                    </group>
                </group>
                <footer> 
                </footer>
            </form>
        </field>
    </record>
    <record id="recharge_wallet_mass_action" model="ir.actions.act_window">
        <field name="name">Isi Ulang Dompet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">recharge.wallet.mass</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="recharge_wallet_mass_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>

  