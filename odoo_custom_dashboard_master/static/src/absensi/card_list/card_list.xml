<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.AbsensiList" owl="1">
        <div class="row w-100 h-100 m-0" style="font-size: 12px; line-height: 1.5;">
            <div class="col-lg-12 p-0">
                <div class="card shadow-sm border-0 rounded-0">
                    <div class="card-header d-flex justify-content-between">
                        <h3 class="card-title mb-0">Persetujuan Jam Kerja Karyawan</h3>
                    </div>
                    <div class="card-body pt-1">
                        <t t-if="state.permintaann.length > 0">
                            <div style="overflow-x: auto;">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nama Karyawan</th>
                                            <th>Absen masuk</th>
                                            <th>Absen Keluar</th>
                                            <th>Jumlah jam Keja</th>
                                            <th>Status Lembur</th>     
                                        </tr>
                                    </thead>
                                    <tbody class="overflow-x-scroll">
                                        <t t-foreach="state.permintaann" t-as="permintaan" t-key="permintaan.id">
                                            <tr style="cursor: pointer;" t-att-id="'product-' + permintaan.id" t-on-click="() => this.onGuruClick(permintaan.id)">
                                                <td>
                                                    <t t-esc="permintaan.namaKaryawan"/>
                                                </td>
                                                <td>
                                                    <t t-esc="permintaan.absenMasuk"/>
                                                </td>
                                                <td>
                                                    <t t-esc="permintaan.absenKeluar"/>
                                                </td>
                                                <td>
                                                    <t t-esc="permintaan.jamKerja"/>
                                                </td>
                                                <td>
                                                    <span t-if="permintaan.status == 'to_approve'" class="badge rounded-pill bg-warning text-dark">Akan Disetujui</span>
                                                    <span t-if="permintaan.status == 'approved'" class="badge rounded-pill bg-success text-dark">Disetujui</span>
                                                    <span t-if="permintaan.status == 'refused'" class="badge rounded-pill bg-danger text-dark">Ditolak</span>
                                                </td>
                                                <!-- <td>
                                                    <t t-esc="lunas.state"/>
                                                </td> -->
                                                <!-- <td class="text-center">
                                                    <span t-if="lunas.state == 'paid'" class="badge rounded-pill bg-success">Lunas</span>
                                                    <span t-if="product.state == 'waiting'" class="badge rounded-pill bg-warning text-dark">Waiting</span>
                                                    <span t-if="product.state == 'confirmed'" class="badge rounded-pill bg-info text-dark">Confirm</span>
                                                    <span t-if="product.state == 'assigned'" class="badge rounded-pill bg-primary">Ready</span>
                                                    <span t-if="product.state == 'done'" class="badge rounded-pill bg-success">Done</span>
                                                    <span t-if="product.state == 'cancel'" class="badge rounded-pill bg-danger">Cancelled</span> 
                                                </td> -->
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center p-3">
                                <span class="ms-2">Data tidak ditemukan</span>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>