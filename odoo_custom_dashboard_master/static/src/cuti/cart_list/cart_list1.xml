<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.CutiList" owl="1">
        <div class="row w-100 h-100 m-0" style="font-size: 12px; line-height: 1.5;">
            <div class="col-lg-12 p-0">
                <div class="card shadow-sm border-0 rounded-0">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Tanggal Merah</h3>
                    </div>
                    <div class="card-body pt-1">
                        <t t-if="state.lunass.length > 0">
                            <div style="overflow-x: auto;">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nama Cuti</th>
                                            <th>Tanggal Mulai</th>
                                            <th>Tanggal Berakhir</th>
                                        </tr>
                                    </thead>
                                    <tbody class="overflow-x-scroll">
                                        <t t-foreach="state.lunass" t-as="lunas" t-key="lunas.id">
                                            <tr style="cursor: pointer;" t-att-id="'product-' + lunas.id" t-on-click="() => this.onLunasClick(lunas.id)">
                                                <td>
                                                    <t t-esc="lunas.name"/>
                                                </td>
                                                <td>
                                                    <t t-esc="lunas.tanggalMulai"/>
                                                </td>
                                                <td>
                                                    <t t-esc="lunas.tanggalBerakhir"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center p-3">
                                <span class="ms-2">Data tidak ditemukan</span>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>