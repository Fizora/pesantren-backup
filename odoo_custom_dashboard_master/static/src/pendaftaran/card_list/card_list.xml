<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.PendaftaranList" owl="1">
        <div class="row w-100 h-100 m-0" style="font-size: 12px; line-height: 1.5;">
            <div class="col-lg-12 p-0">
                <div class="card shadow-sm border-0 rounded-0">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Santri Dengan Nilai Terbaik</h3>
                    </div>
                    <div class="card-body pt-1">
                        <t t-if="state.santrii.length > 0">
                            <div style="overflow-x: auto;">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>No Pendaftaran</th>
                                            <th>Nama Santri</th>
                                            <th>Jenjang Pendidikan</th>
                                            <th>Total Nilai</th>
                                        </tr>
                                    </thead>
                                    <tbody class="overflow-x-scroll">
                                        <t t-foreach="state.santrii" t-as="santri" t-key="santri.id">
                                            <tr style="cursor: pointer;" t-att-id="'product-' + santri.id" t-on-click="() => this.onKaryawanClick(santri.id)">
                                                <td>
                                                    <t t-esc="santri.no"/>
                                                </td>
                                                <td>
                                                    <t t-esc="santri.nama"/>
                                                </td>
                                                <td>
                                                    <!-- <t t-esc="santri.jenjang"/> -->
                                                    <span t-if="santri.jenjang == 'sdmi'" class="badge rounded-pill bg-success text-light">Sd/Mi</span>
                                                    <span t-if="santri.jenjang == 'smpmts'" class="badge rounded-pill bg-info text-light">Smp/Mts</span>
                                                    <span t-if="santri.jenjang == 'smama'" class="badge rounded-pill bg-warning text-dark">Sma/Ma</span>
                                                    <span t-if="santri.jenjang == 'smk'" class="badge rounded-pill bg-danger text-light">Smk</span>
                                                </td>
                                                <td>
                                                    <t t-esc="santri.nilai"/>
                                                </td>
                                                <!-- <td>
                                                    <t t-esc="lunas.state"/>
                                                </td> -->
                                                <!-- <td class="text-center"> -->
                                                    <!-- <span t-if="lunas.state == 'paid'" class="badge rounded-pill bg-success">Lunas</span>
                                                    <span t-if="product.state == 'waiting'" class="badge rounded-pill bg-warning text-dark">Waiting</span>
                                                    <span t-if="product.state == 'confirmed'" class="badge rounded-pill bg-info text-dark">Confirm</span>
                                                    <span t-if="product.state == 'assigned'" class="badge rounded-pill bg-primary">Ready</span>
                                                    <span t-if="product.state == 'done'" class="badge rounded-pill bg-success">Done</span>
                                                    <span t-if="product.state == 'cancel'" class="badge rounded-pill bg-danger">Cancelled</span>  -->
                                                <!-- </td> -->
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center p-3">
                                <span class="ms-2">Data tidak ditemukan</span>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>