<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="owl.PosCardList" owl="1">
		<style>
			.highlighted-row { background-color: #0cba3e; }
			.table-header { background-color: #0cba3e; }
			.product-table { font-size: 0.9rem; }
			.product-icon { font-size: 8px; color: #0cba3e; margin-right: 4px; }
			.product-number { font-size: 13px; color: #0cba3e; }
			.card-container {
			display: flex;
			flex-direction: column;
			height: 100%;
			}
			.card-body {
			flex: 1;
			display: flex;
			flex-direction: column;
			}
			.table-responsive {
			flex: 1;
			display: flex;
			flex-direction: column;
			}
			.no-data-message {
			flex: 1;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
			padding: 20px;
			color: #666;
			font-style: italic;
			background-color: #f9f9f9;
			border-radius: 4px;
			margin: 0;
			height: 100%;
			}
			.no-data-icon {
			font-size: 24px;
			margin-bottom: 10px;
			color: #999;
			}
			.product-table {
			flex: 1;
			}
		</style>
		<div class="row w-100 h-100 m-0">
			<div class="col-lg-12 h-100">
				<div class="card border-0 h-100">
					<div class="card-body p-2 card-container">
						<h3 class="fw-bold text-primary mb-2">
							Top Penjualan Produk
						</h3>
						<div class="table-responsive">
							<t t-if="state.products.length > 0">
								<table class="table table-striped table-hover product-table mb-0">
									<thead class="table-header">
										<tr>
											<th scope="col" class="py-2">
												#
											</th>
											<th scope="col" class="py-2">
												Nama Produk
											</th>
											<th scope="col" class="py-2">
												Total Penjualan
											</th>
											<th scope="col" class="py-2">
												Stok Terjual
											</th>
										</tr>
									</thead>
									<tbody>
										<t t-foreach="state.products" t-as="product" t-key="product.name">
											<tr class="tabel-list" style="cursor:pointer;" t-att-data-product-id="product.productId">
												<td class="py-1">
													<i class="fas fa-box product-icon">
													</i>
													<span t-esc="product.number" class="product-number">
													</span>
												</td>
												<td class="py-1">
													<span t-att-title="product.fullname" t-esc="product.name" />
												</td>
												<td class="py-1">
													<span t-esc="product.totalSales" />
												</td>
												<td class="py-1">
													<span t-esc="product.soldStock" />
												</td>
											</tr>
										</t>
									</tbody>
								</table>
							</t>
							<t t-else="">
								<div class="no-data-message">
									<div class="no-data-icon">
									</div>
									<p>
										Data tidak ditemukan
									</p>
								</div>
							</t>
						</div>
					</div>
				</div>
			</div>
		</div>
	</t>
</templates>
