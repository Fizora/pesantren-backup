<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.WalletCardList" owl="1">
        <div class="row w-100 h-100 m-0" style="font-size: 12px; line-height: 1.5;">
            <div class="col-lg-12 p-0">
                <div class="card shadow-sm border-0 rounded-0">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Transaksi Terbaru</h3>
                    </div>
                    <div class="card-body pt-1">
                        <t t-if="state.products.length > 0">
                            <div style="overflow-x: auto;">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tgl</th>
                                            <th>Nama Santri</th>
                                            <th>Kelas</th>
                                            <!-- <th>Virtual Account</th> -->
                                            <th>Keterangan</th>
                                            <th>Jenis</th>
                                        </tr>
                                    </thead>
                                    <tbody class="overflow-x-scroll">
                                        <t t-foreach="state.products" t-as="product" t-key="product.id">
                                            <tr style="cursor: pointer;" t-att-id="'product-' + product.id" t-on-click="() => this.onProductClick(product.id)">
                                                <td>
                                                    <t t-esc="product.create_date"/>
                                                </td>
                                                <td>
                                                    <t t-esc="product.santri"/>
                                                </td>
                                                <td>
                                                    <t t-esc="product.kelas"/>
                                                </td>
                                                <td>
                                                    <t t-esc="product.keterangan"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-if="product.jns_transaksi == 'masuk'" class="badge rounded-pill bg-primary text-light">Masuk</span>
                                                    <span t-if="product.jns_transaksi == 'keluar'" class="badge rounded-pill bg-danger text-light">Keluar</span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center p-3">
                                <span class="ms-2">Data tidak ditemukan</span>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>