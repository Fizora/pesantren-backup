<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.KeamananCardList" owl="1">
        <div class="row w-100 h-100 m-0" style="font-size: 12px; line-height: 1.5;">
            <div class="col-lg-12 p-0">
                <div class="card shadow-sm border-0 rounded-0">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Terakhir Keluar</h3>
                    </div>
                    <div class="card-body pt-1">
                        <t t-if="state.keluarIjin.length > 0">
                            <div style="overflow-x: auto;">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Nomor</th>
                                            <th>Nama Santri</th>
                                            <th>Tgl Keluar</th>
                                            <th>Keperluan</th>
                                            <th>Lama Ijin</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody class="overflow-x-scroll">
                                        <t t-foreach="state.keluarIjin" t-as="ijin" t-key="ijin.id">
                                            <tr style="cursor: pointer;" t-att-id="'product-' + ijin.id" t-on-click="() => this.onProductClick(ijin.id)">
                                                <td>
                                                    <t t-esc="ijin.name"/>
                                                </td>
                                                <td>
                                                    <t t-esc="ijin.siswa"/>
                                                </td>
                                                <td>
                                                    <t t-esc="ijin.tgl_ijin"/>
                                                </td>
                                                <td>
                                                    <t t-esc="ijin.keperluan"/>
                                                </td> 
                                                <td>
                                                    <t t-esc="ijin.lamaijin"/>
                                                </td>
                                                <td>
                                                    <span t-if="ijin.state == 'Permission'" class="badge rounded-pill bg-danger text-light">Keluar</span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center p-3">
                                <span class="ms-2">Data tidak ditemukan</span>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>