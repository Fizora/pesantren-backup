<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="list_views_jenjang" model="ir.ui.view">
            <field name="name">cdn.pengaturan_jenjang.list</field>
            <field name="model">cdn.pengaturan_jenjang</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="jenjang"/>
                    <field name="keterangan"/>
                </list>
            </field>
        </record>

        <record id="form_views_jenjang" model="ir.ui.view">
            <field name="name">cdn.pengaturan_jenjang.form</field>
            <field name="model">cdn.pengaturan_jenjang</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="update_kelas_siswa" type="object" string="Update Kelas Siswa" class="oe_highlight"/> -->
                        <button string="Konfirmasi" name="konfirmasi" type="object" class="oe_highlight" invisible="status == 'konfirm'"/>
                        <button string="Draft" name="draft" type="object" class="oe_highlight" invisible="status == 'draft'"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,konfirm" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="status == 'konfirm'"/>
                                <field name="jenjang" readonly="status == 'konfirm'"/>
                            </group>
                            <group>
                                <field name="keterangan" readonly="status == 'konfirm'"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_jenjang_pengaturan_action" model="ir.actions.act_window">
            <field name="name">Jenjang</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.pengaturan_jenjang</field>
            <field name="view_mode">list,form</field>

            <!-- <field name="context">{'search_default_order_by_create_date': 1}</field> -->

        </record>

        <!-- <menuitem id="cdn_menu_act" name="Jenjang Pendidikan" parent="pengaturan_umum_menu_categ" action="cdn_jenjang_pengaturan_action" sequence="70"/> -->
    </data>
</odoo>