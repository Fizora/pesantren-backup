                                        <li>
                                            <span class="text-muted">Nama Ayah : </span>
                                            <field name="ayah_nama"></field>
                                        </li>
                                        <li>
                                            <span class="text-muted">Nama Ibu : </span>
                                            <field name="ibu_nama"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_update_nama_sekolah" model="ir.actions.server">
            <field name="name">Perbarui Sekolah Sesuai PSB</field>
            <field name="model_id" ref="model_cdn_siswa"/>
            <field name="binding_model_id" ref="model_cdn_siswa"/>
            <field name="state">code</field>
            <field name="code">
                model.update_nama_sekolah_all()
            </field>
        </record>
        <!-- action window -->
        <record id="action_cdn_siswa" model="ir.actions.act_window">
            <field name="name">Siswa</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.siswa</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_group_by_jenjang': 1, 'search_default_group_by': 'jenjang'}</field>            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Siswa
                </p>
                <p>
                Click the Create button to add a new Siswa
                </p>
            </field>
        </record>
        <menuitem id="menu_cdn_siswa" name="Santri" parent="siswa_menu_categ" action="action_cdn_siswa" sequence="10"/>
    </data>
</odoo>