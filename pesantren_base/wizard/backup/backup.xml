<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View untuk Kenaikan Kelas -->
        <record id="view_kenaikan_kelas_form" model="ir.ui.view">
            <field name="name">cdn.kenaikan_kelas.form</field>
            <field name="model">cdn.kenaikan_kelas</field>
            <field name="arch" type="xml">
                <form string="Kenaikan Kelas">
                    
                    <sheet>
                        <group>
                            <group>
                                <field name="tahunajaran_id" string="Tahun Ajaran"/>
                                <!-- <field name="kenaikan" string="Naik/Lulus" widget="radio" options="{'horizontal': true}"/> -->
                            </group>
                            <group>
                                <!-- Field jenjang tidak ada di model tapi ditampilkan di UI -->
                                <!-- <field name="jenjang" invisible="1"/> -->
                                <!-- Tingkat ditampilkan sebagai widget many2many_tags -->
                            </group>
                        </group>
                        
                        <group string="Kelas">
                            <group>    
                                <field name="kelas_id" widget="many2many_tags" options="{'no_create': True}" placeholder="Pilih Kelas"/>
                            </group>

                            <group>
                                <field name="jenjang" invisible="1"/>
                                <field name="tingkat_id" widget="many2many_tags"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Santri">
                                <field name="partner_ids">
                                    <list editable="bottom">
                                        <field name="centang"/>
                                        <field name="name" string="Nama"/>
                                        <field name="nis" string="NIS"/>
                                        <field name="ruang_kelas_id" string="Ruang Kelas" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button name="action_proses_kenaikan_kelas" string="Simpan" type="object" class="btn-primary"    />
                        <button string="Batal" class="btn-secondary" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <!-- Action untuk Kenaikan Kelas -->
        <record id="action_kenaikan_kelas" model="ir.actions.act_window">
            <field name="name">Kenaikan Kelas</field>
            <field name="res_model">cdn.kenaikan_kelas</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu Item untuk Kenaikan Kelas -->
        <menuitem id="menu_kenaikan_kelas"
                  name="Kenaikan Kelas"
                  parent="sekolah_top_menu"
                  action="action_kenaikan_kelas"
                  sequence="50"/>
    </data>
</odoo>













