                    background: linear-gradient(135deg, #A812AE, #e040fb);
                    border: none;
                    padding: 12px 24px;
                    border-radius: 25px;
                    color: white;
                    text-decoration: none;
                    font-weight: 600;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    box-shadow: 0 4px 15px rgba(168, 18, 174, 0.3);
                    transition: all 0.3s ease;
                    display: inline-block;
                    margin-top: 1rem;
