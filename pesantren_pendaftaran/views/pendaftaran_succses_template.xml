                .icon-user { background: linear-gradient(135deg, #A812AE, #e040fb); }
                .icon-education { background: linear-gradient(135deg, #17a2b8, #00bcd4); }
                .icon-bank { background: linear-gradient(135deg, #ffc107, #ffb300); }

