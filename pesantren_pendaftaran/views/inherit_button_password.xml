<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pendaftaran_santri_view_form_inherit" model="ir.ui.view">
            <field name="name">pendaftaran.santri.form.password.toggle</field>
            <field name="model">ubig.pendaftaran</field> <!-- Update this with your actual model name -->
            <field name="inherit_id" ref="pesantren_pendaftaran.pendaftaran_santri_view_form"/> <!-- Replace with the actual XML ID of your form -->
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Akun']//div[@class='o_row'][.//field[@name='password']]" position="replace">
                    <div class="o_row">
                        <field name="password" password="True" readonly="state in 'diterima,ditolak,batal'" />
                        <button type="button" class="btn btn-link" 
                                title="Tampilkan/Sembunyikan Password"
                                t-on-click="togglePasswordVisibility">
                            <i class="fa fa-eye"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>