<templates>
    <t t-name="custom_password_toggle.PasswordToggleWidget" owl="1">
        <div class="o_input_group position-relative">
            <input t-att-type="props.isPasswordVisible ? 'text' : 'password'" 
                   t-att-value="props.record.data[props.name]"
                   t-att-class="props.inputClasses"
                   t-att-placeholder="props.placeholder"
                   t-att-readonly="props.readonly ? 'readonly' : undefined"
                   t-on-input="_onInput"
                   t-on-change="_onChange"
                   t-on-keydown="_onKeydown"
                   t-ref="input"/>
            <span class="o_input_icon position-absolute end-0 top-50 translate-middle-y pe-2">
                <i t-att-class="props.isPasswordVisible ? 'fa fa-eye-slash' : 'fa fa-eye'" 
                   style="cursor: pointer;" 
                   title="Tampilkan/Sembunyikan Password"
                   t-on-click="_togglePasswordVisibility"/>
            </span>
        </div>
    </t>
</templates>