            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Klik tombol Buat untuk mendaftar sebagai calon karyawan.
                </p>
            </field>
        </record> -->

        <!-- Search -->
        <record id="ubig_pendaftaran_view_search" model="ir.ui.view">
            <field name="name">ubig.karyawan.view.search</field>
            <field name="model">ubig.karyawan</field>
            <field name="arch" type="xml">
                <search string="Pendaftaran Karyawan">
                    <!-- Field pencarian -->
                    <field name="name" select="True" />
                    <field name="tgl_pendaftaran" select="True" />
                    <field name="tmp_lahir" select="True" />
                    <field name="gender" select="True" />
                    <field name="email_kantor" select="True" />

                    <!-- Group By berdasarkan jenjang -->
                    <group string="Group By">
                        <filter name="group_by_gender" string="gender" context="{'group_by': 'gender'}" />
                        <filter name="group_by_lembaga" string="lembaga" context="{'group_by': 'lembaga'}" />
                        <filter name="group_by_job_id" string="job_id" context="{'group_by': 'job_id'}" />
                        <filter name="group_by_tgl_pendaftaran" string="Tanggal Daftar" context="{'group_by': 'tgl_pendaftaran'}" />
                    </group>
                </search>
            </field>
        </record>


    </data>
</odoo>