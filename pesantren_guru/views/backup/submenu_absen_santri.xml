<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="absensi_santri_admin_list" model="ir.ui.view">
            <field name="name">absensi.santri.admin.list</field>
            <field name="model">cdn.absensi_siswa</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <list string="Absensi Santri">
                    <field name="name"/>
                    <field name="tanggal"/>
                    <field name="kelas_id"/>
                    <field name="mapel_id"/>
                    <field name="jampelajaran_id"/>
                    <field name="guru_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="absensi_santri_admin_search" model="ir.ui.view">
            <field name="name">absensi.santri.admin.search</field>
            <field name="model">cdn.absensi_siswa</field>
            <field name="arch" type="xml">
                <search string="Cari Absensi Santri">
                    <field name="name"/>
                    <field name="kelas_id"/>
                    <field name="mapel_id"/>
                    <field name="guru_id"/>
                    <filter string="Hari Ini" name="today" domain="[('tanggal', '=', context_today())]"/>
                    <filter string="Status Draft" name="status_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Status Selesai" name="status_done" domain="[('state', '=', 'done')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Kelas" name="group_by_kelas" domain="[]" context="{'group_by': 'kelas_id'}"/>
                        <filter string="Mata Pelajaran" name="group_by_mapel" domain="[]" context="{'group_by': 'mapel_id'}"/>
                        <filter string="Guru" name="group_by_guru" domain="[]" context="{'group_by': 'guru_id'}"/>
                        <filter string="Status" name="group_by_status" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="absensi_santri_data" model="ir.actions.act_window">
            <field name="name">Absensi Santri</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.absensi_siswa</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[(1, '=', 1)]</field>
            <field name="context">{'group_by': ['tanggal:day']}</field>
            <field name="search_view_id" ref="absensi_santri_admin_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                                         (0, 0, {'view_mode': 'list', 'view_id': ref('absensi_santri_admin_list')})]"/>
        </record>

        <menuitem id="absensi_santri_admin_menu_act"
                  name="Absensi Santri"
                  parent="pesantren_base.absensi_menu_categ"
                  action="absensi_santri_data"
                  sequence="10"/>
    </data>
</odoo>