<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_move_form_bsi_va" model="ir.ui.view">
            <field name="name">account.move.form.bsi.va</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    
                    <button name="action_generate_va"
                            string="Generate VA BSI"
                            type="object"
                            class="btn-primary"
                            invisible="not show_generate_va"/>

                    <button name="action_update_va"
                            string="Update VA"
                            type="object"
                            class="btn-secondary"
                            invisible="not show_update_va"/>

                    <button name="action_inquiry_va"
                            string="Inquiry VA"
                            type="object"
                            class="btn-info"
                            invisible="not show_inquiry_va"/>
                </xpath>
            </field>
        </record>

        <!-- Tampilkan VA Number di form -->
        <record id="view_move_form_bsi_va_field" model="ir.ui.view">
            <field name="name">account.move.form.bsi.va.field</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside">
                    <field name="va_number" readonly="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
