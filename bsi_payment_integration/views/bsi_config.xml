<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Menu Induk jika belum ada -->

        <!-- Action -->
        <record id="action_bsi_api_config" model="ir.actions.act_window">
            <field name="name">Konfigurasi BSI</field>
            <field name="res_model">bsi.api.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>Konfigurasi koneksi ke API BSI Virtual Account</p>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_bsi_api_config_tree" model="ir.ui.view">
            <field name="name">bsi.api.config.tree</field>
            <field name="model">bsi.api.config</field>
            <field name="arch" type="xml">
                <list string="Konfigurasi API BSI">
                    <field name="client_id"/>
                    <field name="base_url"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_bsi_api_config_form" model="ir.ui.view">
            <field name="name">bsi.api.config.form</field>
            <field name="model">bsi.api.config</field>
            <field name="arch" type="xml">
                <form string="Konfigurasi API BSI">
                    <group>
                        <field name="client_id"/>
                        <field name="secret_key" password="True"/>
                        <field name="base_url"/>
                    </group>
                </form>
            </field>
        </record>

        <menuitem id="menu_bsi_root" name="BSI Integration" sequence="10"/>

        <!-- Submenu untuk Konfigurasi -->
        <menuitem id="menu_bsi_config"
                  name="Konfigurasi API"
                  parent="menu_bsi_root"
                  action="action_bsi_api_config"
                  sequence="20"/>
    </data>
</odoo>
