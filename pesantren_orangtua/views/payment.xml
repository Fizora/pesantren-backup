<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="view_account_payment_search_siswa_partner" model="ir.ui.view">
            <field name="name">account.payment.search.siswa.partner</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <!-- Hapus field name yang muncul sebagai "Payment" di dropdown -->
                <field name="name" position="replace">
                    <!-- Kosong untuk menghapus pencarian "Payment" sepenuhnya -->
                </field>
                
                <!-- Hapus field partner_id yang asli (yang muncul sebagai "Customer/Vendor") -->
                <field name="partner_id" position="replace">
                    <field name="partner_id" string="Data"
                        filter_domain="['|', '|', '|',
                            ('partner_id.name', 'ilike', self),
                            ('siswa_id.name', 'ilike', self),
                            ('siswa_id.barcode_santri', 'ilike', self),
                            ('siswa_id.nis', 'ilike', self)]"/>
                </field>
                
                <!-- Tambahkan filter grouping berdasarkan siswa -->
                <filter name="partner" position="after">
                    <filter string="Siswa" name="group_by_siswa" domain="[]" context="{'group_by': 'siswa_id'}"/>
                </filter>
            </field>
        </record>

        <!-- account.payment action window -->
        <record id="pembayaran_orangtua_action" model="ir.actions.act_window">
            <field name="name">Pembayaran</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_partner_id': 1}</field>

            <field name="domain">
            [
                ('siswa_id.orangtua_id.partner_id.user_id','=',uid)
            ]
            </field>
        </record>
        <record id="tree_pembayaran_orangtua_action" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="account.view_account_supplier_payment_tree"/>
            <field name="act_window_id" ref="pembayaran_orangtua_action"/>
        </record>
        <record id="form_pembayaran_orangtua_action" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.view_account_payment_form"/>
            <field name="act_window_id" ref="pembayaran_orangtua_action"/>
        </record>
        
        <!-- This Menu Item must have a parent and an action -->
        <!-- <menuitem id="payment_orangtua_menu_act" name="Pembayaran" parent="keuangan_menu_categ" action="pembayaran_orangtua_action" sequence="20"/> -->
       
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <!-- Tambahkan group pada setiap button -->
                <xpath expr="//header/button[@name='action_post']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_validate']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_reject']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_draft']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='button_request_cancel']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='mark_as_sent']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//header/button[@name='unmark_as_sent']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>

                <xpath expr="//field[@name='payment_type']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="bukti_pembayaran" 
                    widget="image"
                    />
                </xpath>

                <xpath expr="//sheet/group" position="replace">
                <group>
                    <group string="Pelanggan">
                        <field name="partner_id" string="Pelanggan"/>
                    </group>
                    <group string="Tanggal">
                        <field name="date" string="Tgl Bayar"/>
                    </group>
                </group>
                <group string="Pembayaran">
                    <group>
                        <field name="payment_type" widget="radio" options="{'horizontal': true}"/>
                        <field name="amount"/>
                        <field name="bank_reference"/>
                        <field name="name"/>
                        <field name="memo"/>
                    </group>
                    <group>
                        <field name="journal_id"/>
                        <field name="payment_method_line_id"/>
                        <field name="partner_bank_id"/>
                        <field name="bukti_pembayaran" widget="image"/>
                    </group>
                </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>