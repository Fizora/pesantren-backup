<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
        <record id="view_move_form_inherit_button_pay_groups" model="ir.ui.view">
            <field name="name">account.move.form.inherit.button.pay.groups</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment'][@id='account_invoice_payment_btn']" position="attributes">
                    <attribute name="groups">account.group_account_invoice,pesantren_kesantrian.group_kesantrian_orang_tua</attribute>
                </xpath>
                
                <xpath expr="//button[@name='action_register_payment'][@id='account_invoice_payment_secondary_btn']" position="attributes">
                    <attribute name="groups">account.group_account_invoice,pesantren_kesantrian.group_kesantrian_orang_tua</attribute>
                </xpath>
            </field>
        </record>
        
    </data>  
</odoo>